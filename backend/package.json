    "pg": "^8.5.1"
  },
  "devDependencies": {
    "apollo-server-testing": "^2.19.0",
    "jest": "^26.6.3"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "__tests__/helpers/"
